{
  "name": "react-amount",
  "version": "1.0.4",
  "description": "React amount component",
  "keywords": [
    "react",
    "react-component",
    "amount",
    "format",
    "number",
    "input",
    "field",
    "comma",
    "space",
    "currency",
    "prefix",
    "suffix"
  ],
  "author": {
    "name": "Charles Coqueret",
    "url": "https://github.com/CharlesCoqueret"
  },
  "license": "MIT",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/CharlesCoqueret/react-amount.git"
  },
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "rm -rf dist",
    "build:lib": "microbundle-crl --no-compress --tsconfig ./tsconfig.build.json --format modern,cjs,umd",
    "build:scss": "run-s build:scss:*",
    "build:scss:standard": "sass src/index.scss dist/style/index.css",
    "build:scss:minified": "sass src/index.scss dist/style/index.min.css --style compressed",
    "test": "jest --coverage",
    "lint": "xo",
    "lint:fix": "xo --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^14.1.1",
    "@types/jest": "^27.4.1",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "babel-jest": "^27.5.1",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "jest": "^27.5.1",
    "microbundle-crl": "^0.13.11",
    "prettier": "^2.6.2",
    "react": "^18",
    "react-dom": "^18",
    "sass": "^1.50.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "xo": "^0.48.0",
    "yarn-run-all": "^3.1.1"
  },
  "peerDependencies": {
    "react": "^16.14 | ^17 | ^18"
  },
  "engines": {
    "node": ">=12"
  },
  "xo": {
    "prettier": true,
    "extends": "xo-react",
    "rules": {
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "default",
          "format": [
            "PascalCase",
            "camelCase"
          ]
        }
      ],
      "import/extensions": "off",
      "max-params": "off",
      "no-await-in-loop": "off",
      "react/function-component-definition": "off",
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "kebabCase": true,
            "pascalCase": true
          }
        }
      ]
    }
  }
}
