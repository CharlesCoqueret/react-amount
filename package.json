{
  "name": "react-amount",
  "version": "1.0.0",
  "description": "React amount component",
  "keyword": [
    "react",
    "amount",
    "format",
    "number",
    "input",
    "field",
    "comma",
    "space",
    "currency",
    "prefix",
    "suffix"
  ],
  "author": {
    "name": "Charles Coqueret",
    "url": "https://github.com/CharlesCoqueret"
  },
  "license": "MIT",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/CharlesCoqueret/react-amount.git"
  },
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "rm -rf dist",
    "build:lib": "microbundle-crl --no-compress --tsconfig ./tsconfig.build.json --format modern,cjs,umd",
    "build:scss": "run-s build:scss:*",
    "build:scss:standard": "sass src/index.scss dist/style/index.css",
    "build:scss:minified": "sass src/index.scss dist/style/index.min.css --style compressed",
    "test": "jest --coverage",
    "lint": "xo",
    "lint:fix": "xo --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@testing-library/dom": "^8.7.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.3.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "babel-jest": "^27.2.5",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.2.5",
    "microbundle-crl": "^0.13.11",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.42.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3",
    "xo": "^0.45.0",
    "yarn-run-all": "^3.1.1"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "engines": {
    "node": ">=10"
  },
  "xo": {
    "prettier": true,
    "extends": "xo-react",
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "kebabCase": true,
            "pascalCase": true
          }
        }
      ],
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "default",
          "format": [
            "PascalCase",
            "camelCase"
          ]
        }
      ]
    }
  }
}
